<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_alignParentBottom="true"
    android:gravity="center_vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"/>

    <ToggleButton
        android:id="@+id/tb_like"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginLeft="12dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_like_selector"
        android:drawablePadding="4dp"
        android:drawableTint="@color/colorAccent"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:textColor="@color/gray"
        android:textOff=""
        android:textOn=""
        android:textSize="12dp"/>

    <ToggleButton
        android:id="@+id/tb_permission"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:background="@android:color/transparent"
        android:checked="false"
        android:gravity="right|center_vertical"
        android:textColor="@color/col_permission_selector"
        android:textOff="@string/str_self"
        android:textOn="@string/str_public"/>

</RelativeLayout>
